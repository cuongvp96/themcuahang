<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="0dp"

        android:paddingTop="3dp">

        <TextView
            android:id="@+id/tvTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ten"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="loai"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_motagia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTen"
            android:text="price"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTen"
            android:text="sdt"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_chucuahang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTen"
            android:text="chu ch"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_diadiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_motagia"
            android:text="diadiem"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_latlng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_diadiem"
            android:text="loaction"
            android:textSize="18dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>